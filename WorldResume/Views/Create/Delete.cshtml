@model WorldResume.Models.Country

@{
    ViewData["Title"] = "Delete";
}



<h2>Are you sure you want to delete this?</h2>
<!-- Card -->
<div class="card card-cascade wider reverse text-white bg-dark mb-3" style="border-radius: 30px;">

    <!-- Card image -->
    <div class="view view-cascade overlay">
        <div>
            <img class="position-absolute p-2 m-2" src="@Model.FlagImageUrl" alt="Card image cap">
            <img class="card-img-top" style="border-radius: 30px;" src="@Model.Wallpaper"
                 alt="Card image cap">
            <a href="#!">
                <div class="mask rgba-white-slight"></div>
            </a>
        </div>

    </div>

    <!-- Card content -->
    <div class="card-body card-body-cascade text-left" style="border-radius: 30px;">

        <!-- Title -->
        <h4 class="card-title m-2"><strong>@Model.Name</strong></h4>
        <div id="map-container-google-9" class="z-depth-1-half map-container-5 float-right" style="border:0" allowfullscreen>
            <iframe src="@Model.CountryImageUrl" width="600" height="450" frameborder="0" style="border:0;" allowfullscreen="" aria-hidden="false" tabindex="0"></iframe>
        </div>

        <!-- Text -->
        <p class="card-text">
            <ul class="list-group list-group-flush text-white bg-dark mb-3">
                <li class="list-group-item text-white bg-dark mb-3">population:    @Model.Population              </li>
                <li class="list-group-item text-white bg-dark mb-3">capital:       @Model.Capital                 </li>
                <li class="list-group-item text-white bg-dark mb-3">languages:     @Model.Languages               </li>
                <li class="list-group-item text-white bg-dark mb-3">surface:       @Model.Surface                 </li>
                <li class="list-group-item text-white bg-dark mb-3">currency:      @Model.Currency                </li>
            </ul>
        </p>
    </div>


</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="CountryId" />
    <input type="submit" value="Delete" class="btn btn-danger" /> |
    <a asp-action="Index">Back to List</a>
</form>
</div>
