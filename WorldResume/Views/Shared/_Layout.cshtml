<!DOCTYPE html>

<html>
<head>
    <title>collect the world: @ViewBag.Title</title>

    <link href="~/node_modules/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/node_modules/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/bundles/site.css" rel="stylesheet" />
</head>
<body>
    <header class="container">

        <nav class="navbar navbar-dark bg-dark navbar-expand-md "  style="border-radius: 20px;">

            <h1 class="navbar-brand"><i class="fa fa-globe"></i>  Welcome to the World Collection</h1>

            <button class="navbar-toggler" data-toggle="collapse" data-target="#theMenu">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div id="theMenu" class=navbar-collapse collapse">
                <ul class="navbar-nav">

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="App" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="App" asp-action="Contact">Contact</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="App" asp-action="About">About</a>
                    </li>
                </ul>
            </div>

        </nav>
    </header>

    <section class="container">
        <h2 class="text-center p-4">@ViewBag.Title</h2>
        @RenderBody()
    </section>


    <footer class="container">
        <div class="text-center ">
            @*Bootstrap centreren van de text*@
            Copyright 2020 Declerck Peter BlackBox LTT
        </div>
    </footer>



    <script src="~/node_modules/jquery/dist/jquery.min.js"></script>
    <script src="~/node_modules\bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script src="~/bundles/index.js" type="text/javascript" language="javascript"></script>

    @RenderSection("scripts", false)


</body>
</html>
