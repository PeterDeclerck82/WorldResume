<!DOCTYPE html>
<html>
<head>
    <title>collect the world: @ViewBag.Title</title>
    <link href="~/bundles/site.css" rel="stylesheet" />
    <link href="~/node_modules/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

</head>
<body>
    <header class="container">
        <h1>Welcome to the World Collection</h1>
        <menu>
            <ul>
                <li><a asp-controller="App" asp-action="Index">Home</a></li>
                <li><a asp-controller="App" asp-action="Contact">Contact</a></li>
                <li><a asp-controller="App" asp-action="About">About</a></li>
            </ul>
        </menu>
    </header>

    <section class="container">
        <h2>@ViewBag.Title</h2>
        @RenderBody()
    </section>


    <footer class="container">
        <div class="text-center"> @*Bootstrap centreren van de text*@
            Copyright 2020 Declerck Peter BlackBox LTT
        </div>
    </footer>



    <script src="~/node_modules/jquery/dist/jquery.min.js"></script>
    <script src="~/node_modules\bootstrap/dist/js/bootstrap.bundle.min.js"></script> 
   
    <script src="~/bundles/index.js" type="text/javascript" language="javascript"></script>

    @RenderSection("scripts", false)


</body>
</html>
