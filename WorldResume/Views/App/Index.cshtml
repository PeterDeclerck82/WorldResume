@{
    ViewBag.Title = "Home Page";
}

<!DOCTYPE html>
<html>
<head>
    <title>collect the world: @ViewBag.Title@ViewBag.Title</title>
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
    <h2>@ViewBag.Title</h2>

    <div class="product-info">
        <img src="~/img/China.png" />
        <h3>China</h3>
        <ul class="product-props">
            <li>population: 1 379 302 771           </li>
            <li>continent:  Asia                    </li>
            <li>capital:    Beijing                 </li>
            <li>languages:  Standard Chinese        </li>
            <li>surface:    9 596 961 km2           </li>
            <li>currency:   Chinese yuan ¥ or 元 (CNY)        </li>
        </ul>
        <br />
        <img src="~/img/ChinaShape.PNG" />
        <br />
        <button id="addButton">Add to collection</button>
        <br />
        <br />
    </div>

    <div id="theForm">
        <form>
            <label>Username: </label>
            <br />
            <input />
            <br />

            <label>Email: </label>
            <br />
            <input type="email" />
            <br />

            <label>Subject: </label>
            <br />
            <input type="text" />
            <br />

            <label>Message: </label>
            <br />
            <textarea rows="4"></textarea>
            <br />

            <input type="submit" value="Send message" />

        </form>
    </div>

    <div>
        <div id="loginToggle">Login (click to hide/show)</div>
        <form class="popup-form">

            <div>
                <label>Username</label>
                <input />
            </div>
            <br />
            <div>
                <label>Password</label>
                <input type="password" />
            </div>
            <br />
            <div>
                <input type="checkbox" />
                <label>Remember me?</label>
            </div>
            <br />
            <div>
                <input type="submit" value="Login" />
            </div>


        </form>
    </div>


    <script src="~/node_modules/jquery/dist/jquery.min.js"></script>
    <script src="~/js/index.js"></script>
</body>
</html>